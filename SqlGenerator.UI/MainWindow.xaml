<Window x:Class="SqlGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlGenerator.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel>
            <Button x:Name="buttonLoadModel" Click="ButtonLoadModel_Click">Load Model</Button>
            <Button x:Name="buttonShowTables" Click="ButtonShowTables_Click">Show tables</Button>
            <ListBox x:Name="lstTables"></ListBox>
            <Button x:Name="buttonGenerateDelete" Click="ButtonGenerateDelete_Click">Generate Delete USP for selected table</Button>
            <Button x:Name="buttonGenerateInsert" Click="ButtonGenerateInsert_Click">Generate Insert USP for selected table</Button>
            <Button x:Name="buttonGenerateNetEntityClass" Click="ButtonGenerateNetEntityClass_Click">Generate .NET Entity Class for selected table</Button>
            <TextBox x:Name="txtOutput" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Lucida Console"></TextBox>
        </StackPanel>
    </ScrollViewer>
</Window>
